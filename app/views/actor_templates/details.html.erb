<h1>
  Actor #<%= @the_actor.id %> details
</h1>

<a href="/actors" class="btn btn-block btn-outline-secondary">
  Go back
</a>

&nbsp;|&nbsp;

<hr>

<dl>
  <dt>
    Name
  </dt>
  <dd>
    <%= @the_actor.name %>
  </dd>

  <dt>
    Dob
  </dt>
  <dd>
    <%= @the_actor.dob %>
  </dd>

  <dt>
    Bio
  </dt>
  <dd>
    <%= @the_actor.bio %>
  </dd>

  <dt>
    Image
  </dt>
  <dd>
    <img src="http://robohash.org/<%= @the_actor.image %>?set=set5">
  </dd>

  <dt>
    Created at
  </dt>
  <dd>
    <%= time_ago_in_words(@the_actor.created_at) %> ago
  </dd>

  <dt>
    Updated at
  </dt>
  <dd>
    <%= time_ago_in_words(@the_actor.updated_at) %> ago
  </dd>
</dl>

<h2>Filmography</h2>

<table border="1">

  <tr>
    <th>
      Title
    </th>

    <th>
      Year
    </th>

    <th>
      Director
    </th>

    <th>
      Character name
    </th>

    <th>
    </th>
  </tr>

  <% @filmography.each do |character| %>
  <% a_film = Movie.where( :id => character.movie_id).first %>
    <tr>
      <td>
        <%= a_film.title %>
      </td>
      <td>
        <%= a_film.year %>
      </td>
      <td>
        <% d = Director.where({ :id => a_film.director_id }).first %>
        <%= d.name %>
      </td>
      <td>
        <%= character.name %>
      </td>
      <td>
        <a href="/movies/<%= a_film.id %>">
        Show details
        </a>
      </td>
    </tr>
  <% end %>
</table>